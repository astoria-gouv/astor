# Example environment variables for Astor Currency System
# Copy this file to .env and update with your values

# Environment
ASTOR_ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/astor_dev

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET=your_jwt_secret_at_least_32_characters_long
ENCRYPTION_KEY=your_encryption_key_32_characters_long

# Server
ASTOR_SERVER__HOST=0.0.0.0
ASTOR_SERVER__PORT=8080
ASTOR_SERVER__CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# External Services (Optional)
ASTOR_EXTERNAL_SERVICES__BANKING_API__BASE_URL=https://api.bank.com
ASTOR_EXTERNAL_SERVICES__BANKING_API__API_KEY=your_banking_api_key
ASTOR_EXTERNAL_SERVICES__BANKING_API__SANDBOX_MODE=true

# Notification Services (Optional)
ASTOR_EXTERNAL_SERVICES__NOTIFICATION_SERVICE__EMAIL__SMTP_HOST=smtp.gmail.com
ASTOR_EXTERNAL_SERVICES__NOTIFICATION_SERVICE__EMAIL__SMTP_PORT=587
ASTOR_EXTERNAL_SERVICES__NOTIFICATION_SERVICE__EMAIL__USERNAME=your_email@gmail.com
ASTOR_EXTERNAL_SERVICES__NOTIFICATION_SERVICE__EMAIL__PASSWORD=your_app_password
ASTOR_EXTERNAL_SERVICES__NOTIFICATION_SERVICE__EMAIL__FROM_ADDRESS=noreply@astor.com
ASTOR_EXTERNAL_SERVICES__NOTIFICATION_SERVICE__EMAIL__USE_TLS=true

# Monitoring (Optional)
ASTOR_MONITORING__TRACING__JAEGER_ENDPOINT=http://localhost:14268/api/traces
ASTOR_MONITORING__ALERTS__WEBHOOK_URL=https://hooks.slack.com/your/webhook/url
ASTOR_MONITORING__ALERTS__EMAIL_RECIPIENTS=admin@astor.com,ops@astor.com

# Feature Flags (Optional)
ASTOR_FEATURE_FLAGS__FLAGS__NEW_TRANSACTION_FLOW=true
ASTOR_FEATURE_FLAGS__FLAGS__ENHANCED_SECURITY=false
ASTOR_FEATURE_FLAGS__FLAGS__BETA_FEATURES=true

# TLS (Production only)
ASTOR_SERVER__TLS__CERT_PATH=/etc/ssl/certs/astor.crt
ASTOR_SERVER__TLS__KEY_PATH=/etc/ssl/private/astor.key

# Backup Configuration (Optional)
ASTOR_EXTERNAL_SERVICES__BACKUP_SERVICE__ENABLED=true
ASTOR_EXTERNAL_SERVICES__BACKUP_SERVICE__PROVIDER__S3__BUCKET=astor-backups
ASTOR_EXTERNAL_SERVICES__BACKUP_SERVICE__PROVIDER__S3__REGION=us-east-1
ASTOR_EXTERNAL_SERVICES__BACKUP_SERVICE__SCHEDULE="0 2 * * *"  # Daily at 2 AM
ASTOR_EXTERNAL_SERVICES__BACKUP_SERVICE__RETENTION_DAYS=90
ASTOR_EXTERNAL_SERVICES__BACKUP_SERVICE__ENCRYPTION_ENABLED=true
